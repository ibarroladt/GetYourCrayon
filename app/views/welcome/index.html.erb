      <a href="/">Get Chrome</a>
    </div>
  </div>

  <div class="tags_section">
  	<h2 id="tags_header"></h2>
     <% @tags = Tag.order("taggings_count DESC") %>
     <div id='tagCloud'>
       <% @tags.each do |tag| %>
       <a href="/" data-count="<%=tag.taggings_count %>"><%= tag.name %></a>
       <% end %>
     </div>
  </div>
